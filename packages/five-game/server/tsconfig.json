{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@module/*": ["./module/*"]
		},
		"module": "commonjs",
		"target": "ES2021",
		"allowJs": false,
		"lib": ["es2021"],
		"types": ["@citizenfx/server", "@types/node"],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["./**/*"],
	"exclude": ["node_modules"]
}
